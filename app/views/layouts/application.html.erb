          </div>
        </div>
    </nav>

    <div id="main">
        <%= yield %>
    </div>

    <!-- Footer -->
    <div id="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <h4><img class="mail-small" src="<%= asset_path '1x1.png' %>"/>contact</h4>
